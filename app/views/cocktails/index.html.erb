<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('../../assets/images/bar');">
  <div class="banner-content">
    <h1>ALl Your Favorite Cocktails</h1>
    <p>Learn to drink with Le Wagon</p>
    <%= link_to "Add a new Cocktail", new_cocktail_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>

<div class="container cards">
  <% @cocktails.each do |cocktail| %>
        <div class="card">
          <div class="card-content">
            <%= link_to cocktail.name, cocktail_path(cocktail) %>
          </div>
        </div>
      <% end %>
  </div>
</div>

